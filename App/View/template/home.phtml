<?php /** @var App\Model\Core\Entity\Collection $_products */ ?>
<?php $_products = $this->getData('products') ?>
<?php if ($_products && $_products->getSize()): ?>
    <?php while ($_product = $_products->fetchItem()): ?>
        <div><?php echo $_product->getName() ?></div>
    <?php endwhile; ?>
<?php else: ?>
    <div>Пока нет товаров.</div>
    <button>Добавить</button>
<?php endif; ?>
